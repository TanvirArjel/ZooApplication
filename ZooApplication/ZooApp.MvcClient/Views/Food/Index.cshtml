@model IEnumerable<ZooApp.ViewModels.FoodViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Food list with unit price</h2>

<p>
    @Html.ActionLink("Add New Food", "Create", "", htmlAttributes: new { @class = "btn btn-default" })
</p>
<table class="table text-center">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.FoodName)
        </th>
        <th class="text-center">
            @Html.DisplayName("Unit Price (Tk)")
        </th>
        <th class="text-center">Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoodName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
